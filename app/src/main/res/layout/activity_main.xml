<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/pt_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="时间 ： 0"
        android:textColor="#FF0000"
        android:textSize="20sp" />

    <!-- 第一行 -->
    <LinearLayout
        android:id="@+id/pt_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/pt_ib_00x00"
            android:layout_width="84dp"
            android:layout_height="81dp"
            android:padding="0dp"
            android:src="@mipmap/img_00x00"
            android:scaleType="fitCenter"
            android:background="@null" />
        <ImageButton
            android:id="@+id/pt_ib_00x01"
            android:layout_width="84dp"
            android:layout_height="81dp"
            android:padding="0dp"
            android:src="@mipmap/img_00x01"
            android:scaleType="fitCenter"
            android:background="@null" />
        <ImageButton
            android:id="@+id/pt_ib_00x02"
            android:layout_width="84dp"
            android:layout_height="81dp"
            android:padding="0dp"
            android:src="@mipmap/img_00x02"
            android:scaleType="fitCenter"
            android:background="@null" />
    </LinearLayout>

    <!-- 第二行 -->
    <LinearLayout
        android:id="@+id/pt_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/pt_ib_01x00"
            android:layout_width="84dp"
            android:layout_height="81dp"
            android:padding="0dp"
            android:src="@mipmap/img_01x00"
            android:scaleType="fitCenter"
            android:background="@null" />
        <ImageButton
            android:id="@+id/pt_ib_01x01"
            android:layout_width="84dp"
            android:layout_height="81dp"
            android:padding="0dp"
            android:src="@mipmap/img_01x01"
            android:scaleType="fitCenter"
            android:background="@null" />
        <ImageButton
            android:id="@+id/pt_ib_01x02"
            android:layout_width="84dp"
            android:layout_height="81dp"
            android:padding="0dp"
            android:src="@mipmap/img_01x02"
            android:scaleType="fitCenter"
            android:background="@null" />
    </LinearLayout>

    <!-- 第三行 -->
    <LinearLayout
        android:id="@+id/pt_line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/pt_ib_02x00"
            android:layout_width="84dp"
            android:layout_height="81dp"
            android:padding="0dp"
            android:src="@mipmap/img_02x00"
            android:scaleType="fitCenter"
            android:background="@null" />
        <ImageButton
            android:id="@+id/pt_ib_02x01"
            android:layout_width="84dp"
            android:layout_height="81dp"
            android:padding="0dp"
            android:src="@mipmap/img_02x01"
            android:scaleType="fitCenter"
            android:background="@null" />
        <ImageButton
            android:id="@+id/pt_ib_02x02"
            android:layout_width="84dp"
            android:layout_height="81dp"
            android:padding="0dp"
            android:src="@mipmap/img_02x02"
            android:scaleType="fitCenter"
            android:background="@null"
            android:visibility="invisible"/>
    </LinearLayout>

    <Button
        android:id="@+id/pt_btn_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="restart"
        android:layout_gravity="center"
        android:text="重新开始"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pt_id_yuantu"
        android:layout_gravity="center"
        android:src="@mipmap/yuantu"
        android:layout_marginTop="20dp"/>

</LinearLayout>
